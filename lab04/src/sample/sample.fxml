<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <Text text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="UserInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="NameInput" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="E-Mail:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="EmailInput"  GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="PhoneInput" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="DoBInput" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#handleSubmitButtonAction" text="Register" />
    </HBox>

    <Text fx:id="actiontarget"  GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Text fx:id="actiontarget2"  GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Text fx:id="actiontarget3"  GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Text fx:id="actiontarget4"  GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Text fx:id="actiontarget5"  GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Text fx:id="actiontarget6"  GridPane.columnIndex="2" GridPane.rowIndex="6" />


    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
